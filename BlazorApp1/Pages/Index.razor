	private void addClick()
	{
		int index = this.tasks.data.Count+1;
		this.tasks.data.Add(new Task_DataDTO
			{
				id = index.ToString(),
				text = $"Task #{index}",
				start_date = "2020-01-21",
				duration = 3,
				progress = 0.5m
			});
	}
	private void removeClick()
	{
		int index = this.tasks.data.Count;
		this.tasks.data.RemoveAt(index - 1);
	}
}
